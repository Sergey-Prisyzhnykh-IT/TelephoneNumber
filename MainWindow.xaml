<Window x:Class="TelephoneNumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneNumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Firstname" HorizontalAlignment="Left" Margin="17,53,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Left" Margin="152,53,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="TelephonNamber" HorizontalAlignment="Left" Margin="287,53,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="FirstnameInput" HorizontalAlignment="Left" Margin="17,137,0,0" Text="Имя" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SurnameInput" HorizontalAlignment="Left" Margin="152,137,0,0" Text="Фамилия" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TelephonNamberInput" HorizontalAlignment="Left" Margin="287,137,0,0" Text="Номер" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Access" Content="Access" HorizontalAlignment="Left" Margin="17,197,0,0" VerticalAlignment="Top" Height="33" Width="128" Click="Access_Click"/>
        <Button x:Name="Next" Content="Next" HorizontalAlignment="Left" Margin="162,196,0,0" VerticalAlignment="Top" Height="33" Width="128" Click="Next_Click"/>
        <TextBox x:Name="Firstname_Copy" HorizontalAlignment="Left" Margin="17,90,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="Surname_Copy" HorizontalAlignment="Left" Margin="152,90,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="TelephonNamber_Copy" HorizontalAlignment="Left" Margin="287,90,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>

    </Grid>
</Window>
